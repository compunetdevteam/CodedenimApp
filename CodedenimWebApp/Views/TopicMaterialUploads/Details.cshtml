    <div class="col-md-4">
        @if (Model.FileType == FileType.MP4)
        {
            <div style="text-align:center">
                <button onclick="playPause()">Play/Pause</button>
                <button onclick="makeBig()">Big</button>
                <button onclick="makeSmall()">Small</button>
                <button onclick="makeNormal()">Normal</button>
                <br><br>
                @*<video controls="controls">
                <source src="~/TopicMaterials/How%20to%20Use%20our%20Learning%20Management%20System.mp4" type="video/mp4" />
            </video>*@
                <video controls="controls" id="video1" width="420">
                    <source src="~/MaterialUpload/@Model.FileLocation" type="video/mp4">
                    Your browser does not support HTML5 video.
                </video>
            </div>
        }
        else if (Model.FileType == FileType.PDF)
        {
        @*<iframe src="~/TopicMaterials/@Model.FileLocation" style="width: 100%;height: 100%;border: none;"></iframe>*@
            <object data="~/MaterialUpload/@Model.FileLocation" type="application/pdf">
                @*<embed src="~/TopicMaterials/@Model.FileLocation" width="500" height="375" type='application/pdf'></embed>*@
                <iframe src="~/MaterialUpload/@Model.FileLocation" style="width: 100%;height: 100%;border: none;"></iframe>


            </object>
       
        }
    </div>
    
