

@using CodedenimWebApp.Service
@using CodeninModel
@*@model CodeninModel.TopicMaterialUpload*@
@model CodedenimWebApp.ViewModels.CourseContentVm
@{


}



<div class="row panel panel-default">
    <div class="col-md-12">
        <div class="page-section">
            <div class="media">

                    <span class="icon-block s60 bg-lightred"><i class="fa fa-book"></i></span>
                
                <div class="media-body">
                    <h1 class="text-display-1 margin-none">@Html.DisplayFor(model => Model.Material.Name)</h1>
                <br>
                </div>
            </div>
        </div>
        </div>

        <div class="col-xs-12 col-md-8 ">
            @if (@Model.Material != null)
            {
                if (@Model.Material.FileType == FileType.MP4)
                {
                    <div style="text-align: center">
                        <button onclick="playPause()" class="btn btn-primary">Play/Pause</button>
                        <button onclick="makeBig()" class="btn btn-primary">Big</button>
                        <button onclick="makeSmall()" class="btn btn-primary">Small</button>
                        <button onclick="makeNormal()" class="btn btn-primary">Normal</button>
                        <br><br>

                        <video controls="controls" id="video1" width="600">
                            <source src="~/MaterialUpload/@Model.Material.FileLocation" type="video/mp4">
                            Your browser does not support HTML5 video.
                        </video>
                    </div>
                }
                else if (@Model.Material.FileType == FileType.PDF)
                {

                    <iframe src="~/MaterialUpload/@Model.Material.FileLocation" style="width: 900px; height:900px; border: none;" type="application/pdf"> </iframe>





                }
                else if (@Model.Material.FileType == FileType.Audio)
                {

                    <audio controls="controls" id="video1" width="420">
                        <source src="~/MaterialUpload/@Model.Material.FileLocation" type="audio/mpeg">

                    </audio>

                }
            }
        </div>



    </div>

    <script>

        var myVideo = document.getElementById("video1");

        function playPause() {
            if (myVideo.paused)
                myVideo.play();
            else
                myVideo.pause();
        }

        function makeBig() {
            myVideo.width = 780;
        }

        function makeSmall() {
            myVideo.width = 420;
        }

        function makeNormal() {
            myVideo.width = 560;
        }
    </script>
