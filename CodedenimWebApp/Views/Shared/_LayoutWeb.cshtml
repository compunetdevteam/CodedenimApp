<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>CodeDim -@ViewBag.Title</title>

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:description" content="Basic login form with nothing more than just required minimum to let your users log into teir accounts." />
    <meta name="twitter:title" content="Login - CodeDenim" />
    <!-- /Twitter Card -->

    <!-- Font Awesome -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css">

    <!-- Bootstrap core CSS -->
    <link href="~/Content/Css/bootstrap.css" rel="stylesheet" />
    <!-- Material Design Bootstrap -->
    <link href="~/Content/Css/mdb.css" rel="stylesheet" />

    <!-- Your custom styles (optional) -->
    <link href="~/Content/Css/style.css" rel="stylesheet" />
    <link href="~/Content/Css/customizer.min.css" rel="stylesheet" />
    <link href="~/Content/Css/compiled.min.css" rel="stylesheet" />
</head>

<body class="fixed-sn white-skin">
<div class="container-fluid">
    @RenderBody();
</div>

<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/respond.js"></script>
<script src="~/Scripts/tether.min.js"></script>
<script src="~/Scripts/mdb.js"></script>
<script src="~/Scripts/customizer.min.js"></script>
<script src="~/Scripts/compiled.min.js"></script>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>