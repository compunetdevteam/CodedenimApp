@{
    ViewBag.Title = "Administrator";
    ViewBag.Role = "ADMIN";
    ViewBag.Administrator = "class = active";
    Layout = "~/Views/Shared/_LayoutBoard.cshtml";
}


<div class="content">
    <br />
    <div class="container-fluid">
        <div class="row" style="background-color:#ffffff;border:1px solid #e2e9e6  ;">
            <br />
            <div class="col-lg-3 col-sm-6">
                <div class="card mycard">
                    <div class="content">
                        <div class="row">

                            <div class="col-xs-12">
                                <div class="numbers">

                                    <p> <i class="fa fa-book fa-1x"></i><span> &nbsp;<b>COURSES</b></span></p>&nbsp;&nbsp;
                                    @ViewBag.TotalCourses+
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-sm-6">
                <div class="card mycard">
                    <div class="content">
                        <div class="row">

                            <div class="col-xs-12">
                                <div class="numbers">
                                    <p><i class="fa fa-pencil fa-1x"></i><span> &nbsp;<b>TOPICS</b></span></p>&nbsp;&nbsp;
                                    @ViewBag.TotalTopics
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card mycard">
                    <div class="content">
                        <div class="row">

                            <div class="col-xs-12">
                                <div class="numbers">
                                    <p><i class="fa fa-user fa-1x"></i><span> &nbsp;<b>STUDENTS</b></span></p>&nbsp;&nbsp;
                                    @ViewBag.TotalStudents+
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="card mycard">
                    <div class="content">
                        <div class="row">

                            <div class="col-xs-12">
                                <div class="numbers">
                                    <p><i class="fa fa-users fa-1x"></i><span> &nbsp;<b>TUTORS</b></span></p>&nbsp;&nbsp;
                                    @ViewBag.TotalTutors +
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
