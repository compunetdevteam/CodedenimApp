@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}

<style>
    .demo-card-square.mdl-card {
        width: 320px;
        height: 320px;
        margin-left: 30px;
    }
    .demo-card-square > .mdl-card__title {
        color: #eee;
        background-color: #093;
    }
    .color {
        color: black;

    }
</style>
<br />
<div class="container-fluid">
<div class="row">
<div class="col-md-4">

    <div class="demo-card-square mdl-card mdl-shadow--2dp">
        <img src="~/Content/img/Corpers.jpg" height="180" class="img-responsive"/>
        <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text">Corper</h2>
        </div>
        <div class="mdl-card__supporting-text">
            <h5>Register As a Corper</h5>
        </div>
        <div class="mdl-card__actions mdl-card--border">
            @Html.ActionLink("register", "CreateCorper", "Students", null, new {@class = "btn btn-default"})

        </div>
    </div>
    </div>



    <div class="col-md-4">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <img src="~/Content/img/UnderG.jpg" height="200" class="img-responsive" />
            <div class="mdl-card__title mdl-card--expand">
                <h2 class="mdl-card__title-text">UnderGraduate</h2>
            </div>
            <div class="mdl-card__supporting-text">
                <h5> Under Graduate Students</h5>
            </div>
            <div class="mdl-card__actions mdl-card--border">

                @Html.ActionLink("register", "CreateUnderGrad", "Students", null, new {@class = "btn btn-default"})
            </div>
        </div>
    </div>



    <div class="col-md-4">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <img src="~/Content/img/Others.jpg" height="200" class="img-responsive" />
            <div class="mdl-card__title mdl-card--expand">
                <h2 class="mdl-card__title-text">Just Want To Learn</h2>
            </div>
            <div class="mdl-card__supporting-text">
                <h5> Want to Learn</h5>
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="btn btn-default">
                    Register
                </a>
            </div>
        </div>
    </div>

</div>





<div class="modal fade" id="createAssetModal" tabindex="-1" role="dialog" aria-labelledby="CreateAssetModal" aria-hidden="true" data-backdrop="static">

    <div id="createAssetContainer">
    </div>

</div>




