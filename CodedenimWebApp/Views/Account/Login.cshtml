@using CodedenimWebApp.Models
 @{
     ViewBag.Title = "Login";
     Layout = "~/Views/Shared/_LoginLayout.cshtml";
 }

<div  class="login">
    <div id="content">
    @using (Html.BeginForm("Login", "Account", new {returnUrl = ViewBag.ReturnUrl}, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="container-fluid">
            <div class="lock-container">
                <div class="panel panel-default text-center paper-shadow" data-z="0.5">
                    <img src="~/Content/img/CodeDemin.png" class="rounded smr-size-3 d-block" style="height: 100px" />
                    @*<img src="images/people/110/guy-5.jpg" class="img-circle width-80">*@
                    <h1 class="text-display-1 text-center margin-bottom-none">Sign In</h1>
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="Email">Username</label>

                            <div class="form-control-material">
                                <input class="form-control md-vertical-align-center text-center" id="Email" name="Email" type="text" placeholder="Username" >

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Password">Password</label>

                            <div class="form-control-material">
                                <input class="form-control md-vertical-align-center text-center" id="Password" name="Password" type="password" placeholder="Enter Password">

                            </div>
                        </div>
                        <button class="btn btn-primary"><i class="fa fa-fw fa-unlock-alt"></i>Login</button>

                        @*<a href="website-student-dashboard.html" class="btn btn-primary">Login <i class="fa fa-fw fa-unlock-alt"></i></a>*@
                        <a href="@Url.Action("ForgotPassword","Account")" class="forgot-password">Forgot password?</a>
                        <a href="@Url.Action("Register","Account")" class="link-text-color">Create account</a>
                    </div>
                </div>                                                                                                                                              
            </div>
        </div>
    }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


