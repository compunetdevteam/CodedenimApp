@model IEnumerable<CodeninModel.Forums.ForumQuestion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<div class="container-fluid" style="margin-left: 10%;">
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Ask Question", "Create")
