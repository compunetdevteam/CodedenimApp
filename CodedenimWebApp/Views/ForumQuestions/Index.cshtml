                    <a href="@Url.Action("Index","ForumAnswers", new {id=item.ForumQuestionId})"> View Answers</a>|
                    @Html.ActionLink("Edit", "Edit", new { id = item.ForumQuestionId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ForumQuestionId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ForumQuestionId })
