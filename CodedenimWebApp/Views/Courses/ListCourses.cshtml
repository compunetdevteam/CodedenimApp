@model IEnumerable<CodeninModel.Course>

@{
    ViewBag.Title = "ListCourses";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
        
}
<div class="st-content">
<!-- extra div for emulating position:fixed of the menu -->
<div class="st-content-inner padding-none">
<div class="container-fluid">
<div class="page-section third">


<div class="row">
<div class="col-md-10">

<div class="row" data-toggle="isotope">

    @foreach (var item in Model)
    {



        <div class="item col-xs-12 col-sm-6 col-lg-4">
            <div class="panel panel-default paper-shadow" data-z="0.5">
                <div class="panel-heading">
                    <div class="media media-clearfix-xs-min v-middle">
                        <div class="media-body text-caption text-light">
                            Lessons 1 of 10
                        </div>
                        <div class="media-right">
                            <div class="progress progress-mini width-100 margin-none">
                                <div class="progress-bar progress-bar-grey-600" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="cover overlay cover-image-full hover">
                    <span class="img icon-block height-100 bg-default"></span>
                    <a href="@Url.Action("Content")" class="padding-none overlay overlay-full icon-block bg-default">
                        <span class="v-center">
                            <img src="@Url.Content("~/MaterialUpload/" + item.FileLocation)" style="width: 160px; height: 170px;" />
                        </span>
                    </a>
                    <a href="website-take-course.html" class="overlay overlay-full overlay-hover overlay-bg-white">
                        <span class="v-center">
                            <span class="btn btn-circle btn-white btn-lg"><i class="fa fa-graduation-cap"></i></span>
                        </span>
                    </a>
                </div>
                <div class="panel-body">
                    <h4 class="text-headline margin-v-0-10"><a href="website-take-course.html">@Html.DisplayFor(modelItem => item.CourseName)</a></h4>
                </div>
                <hr class="margin-none"/>
                <div class="panel-body">
                    @Html.ActionLink("Go to course", "Content", new {id = item.CourseId})
                    @*<a class="btn btn-white btn-flat paper-shadow relative" data-z="0" data-hover-z="1" data-animated href="@Url.Action("Content","Courses")">Go to course</a>*@
                </div>
            </div>
        </div>
    
    }
    
       
  


</div >
</div >

</div>
        </div >
    </div >

</div>
</div>