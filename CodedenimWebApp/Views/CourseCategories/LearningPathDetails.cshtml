                         <span class="v-center">
                             <i class="fa fa-css3"></i>
                         </span>
                     </a>
                     <a href="app-take-course.html" class="overlay overlay-full overlay-hover overlay-bg-white">
                         <span class="v-center">
                             <span class="btn btn-circle btn-primary btn-lg"><i class="fa fa-graduation-cap"></i></span>
                         </span>
