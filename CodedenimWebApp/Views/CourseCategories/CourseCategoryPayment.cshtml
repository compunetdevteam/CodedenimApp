@model IEnumerable<CodeninModel.CourseCategory>
@{
    ViewBag.Title = "Corper Dashboard";
    Layout = "~/Views/Shared/_LayoutBoard.cshtml";
}


@if(Model.Any())
{
    <a href="@Url.Action("StartPayment", "CourseCategories")" class="btn btn-success">Pay For All</a>

}
@foreach (var item in Model)
{
    <div class="item col-xs-12 col-sm-6 col-lg-2" style="margin-left:5%">
        <div class="panel panel-default paper-shadow" data-z="0.5">
            <div class="cover overlay cover-image-full hover">
                <span class="img icon-block height-150 bg-lightred"></span>
                <a href="#" class="padding-none overlay overlay-full icon-block bg-primary">
                    <span class="v-center">
                        <i class="fa fa-windows"></i>
                    </span>
                </a>
                <a href="#" class="overlay overlay-full overlay-hover overlay-bg-white">
                    <span class="v-center">
                        <span class="btn btn-circle btn-red-500 btn-lg"><i class="fa fa-graduation-cap"></i></span>
                    </span>
                </a>
            </div>
            @item.CategoryName
            @item.Amount
            <hr class="margin-none"/>
            <div class="panel-body" style="width: inherit">
                <a href="@Url.Action("StartPayment","CourseCategories",new{id = item.CourseCategoryId})" class="btn btn-primary "><i class="fa fa-fw fa-pencil"></i> Pay To Enroll</a>
            </div>
        </div>
    </div>
}


