@model IEnumerable<CodeninModel.CourseCategory>
@{
    ViewBag.Title = "Course Category";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}

<br /><br /><br /><br /><br />

<div class="container">

    <p>
        @Html.ActionLink("CREATE CATEGORIES", "Create", null, new { @class = "my-class" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CourseCategoryId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CourseCategoryId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CourseCategoryId })
                </td>
            </tr>
        }

    </table>
</div>
