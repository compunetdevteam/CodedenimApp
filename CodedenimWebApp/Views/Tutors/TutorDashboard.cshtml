@using CodeninModel
@using CodeninModel.Forums
@model  IEnumerable<CodedenimWebApp.ViewModels.TutorDashboardVm>
@{
    ViewBag.Title = "TutorDashboard";
    Layout = "~/Views/Shared/_LayoutBoard.cshtml";

}



<!-- content push wrapper -->
<div class="st-pusher" id="content">
<!-- sidebar effects INSIDE of st-pusher: -->
<!-- st-effect-3, st-effect-6, st-effect-7, st-effect-8, st-effect-14 -->
<!-- this is the wrapper for the content -->
<div class="st-content">
<!-- extra div for emulating position:fixed of the menu -->
<div class="st-content-inner padding-none">
<div class="container-fluid">
<div class="page-section">
    <h1 class="text-display-1">Dashboard</h1>
</div>
<div class="row" data-toggle="isotope">
<div class="item col-xs-12 col-lg-6"  id="replace" >
    <div class="panel panel-default paper-shadow" data-z="0.5" >
        <div class="panel-heading">
            <div class="media v-middle">
                <div class="media-body" >
                    <h4 class="text-headline margin-none">Earnings</h4>
                    <p class="text-subhead text-light">This Month</p>
                </div>
                <div class="media-right">
                    <a class="btn btn-white btn-flat" href="app-instructor-earnings.html">Reports</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div id="line-holder" data-toggle="flot-chart-earnings" class="flotchart-holder height-200"></div>
        </div>
        <hr/>
        <div class="panel-body">
            <div class="row text-center">
                <div class="col-md-6">
                    <h4 class="margin-none">Gross Revenue</h4>
                    <p class="text-display-1 text-warning margin-none">102.4k</p>
                </div>
                <div class="col-md-6">
                    <h4 class="margin-none">Net Revenue</h4>
                    <p class="text-display-1 text-success margin-none">55k</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="item col-xs-12 col-lg-6">
    <div class="panel panel-default paper-shadow" data-z="0.5">
        <div class="panel-heading">
            <h4 class="text-headline margin-none">My Courses</h4>
            <p class="text-subhead text-light">Your recent courses</p>
        </div>
        <ul class="list-group">
         
                <li class="list-group-item media v-middle">
                    <div class="media-body">
                        @if (ViewBag.TutorCourses != null)
                        {


                            foreach (var courses in ViewBag.TutorCourses as List<TutorCourse>)
                             {
                                 <a href="@Url.Action("Create", "Modules", new {id = courses.CourseId})" class="btn btn-primary paper-shadow relative" data-z="0" data-hover-z="1" data-animated>@courses.Courses.CourseName</a><br /><br />
                                @*@Ajax.ActionLink(@courses.Courses.CourseName, "CreatePartial", "Modules", new { id = courses.CourseId },
                                    new AjaxOptions { UpdateTargetId = "replace", InsertionMode = InsertionMode.Replace, LoadingElementId = "image_loading" })*@
                            }
                        }
                        else
                        {
                            <p> No Course was assigned to you yet </p>
                        }
                    </div>
                    <div class="media-right">
                        <div class="progress progress-mini width-100 margin-none">
                            <div class="progress-bar progress-bar-green-300" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 45%;">
                            </div>
                        </div>
                    </div>
                </li>
            
        </ul>
        <div class="panel-footer text-right">
            <a href="@Url.Action("ListCourses","Courses")" class="btn btn-white paper-shadow relative" data-z="0" data-hover-z="1" data-animated>View all</a>
            <a href="@Url.Action("create","Courses")" class="btn btn-primary paper-shadow relative" data-z="0" data-hover-z="1" data-animated>CREATE COURSE <i class="fa fa-plus"></i></a>
        </div>
    </div>
</div>
<div class="item col-xs-12 col-lg-6">
    <div class="s-container">
        <h4 class="text-headline margin-none">Questions</h4>
        <p class="text-subhead text-light">Latest student Question </p>
    </div>
    
    @if (ViewBag.ForumQuestions != null)
    {



        foreach (var question in ViewBag.ForumQuestions as List<ForumQuestion>)
         {
             <div class="panel panel-default">
                 <ul class="list-group">
                     <li class="list-group-item">
                         <div class="media v-middle margin-v-0-10">
                             <div class="media-body">
                                 <p class="text-subhead">
                                     <a href="#">
                                         <img src="images/people/110/guy-5.jpg" alt="person" class="width-30 img-circle"/>
                                     </a> &nbsp;
                                     <a href="#">mosaicpro</a>
                                     <span class="text-caption text-light">56 min ago</span>
                                 </p>
                             </div>
                             <div class="media-right">
                                 <div class="width-50 text-right">
                                     <a href="@Url.Action("Create", "ForumAnswers", new {id = question.ForumQuestionId})" class="btn btn-white btn-xs"><i class="fa fa-reply"></i></a>
                                 </div>
                             </div>
                         </div>

                         <p>@question.QuestionName</p>
                         <p class="text-light"><span class="caption">Answers:</span> <a href="@Url.Action("Index", "ForumAnswers", new {id = question.ForumQuestionId})">@question.ForumAnswers.Count()</a>
                         </p>

                     </li>


                 </ul>
             </div>
         }
    }
</div>
</div>
<!-- /st-content-inner -->
</div>
<!-- /st-content -->
        </div>
    </div>
    <!-- /st-content-inner -->
</div>


